{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "outDir": "dist",
        "newLine": "LF",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "paths": {
            "@ayonli/jsext": [
                "."
            ]
        }
    },
    "include": [
        "*.ts",
        "*/**.ts"
    ]
}
