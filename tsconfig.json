{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "rootDir": "./src",
        "outDir": "./",
        "newLine": "LF",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "types": ["node"],
        "paths": {
            "@ayonli/jsext": [
                "."
            ]
        }
    },
    "include": [
        "./src/*.ts",
        "./src/*/**.ts"
    ],
    "exclude": [
        "node_modules",
        "./src/*.test.ts",
        "./src/*/**.test.ts"
    ]
}
